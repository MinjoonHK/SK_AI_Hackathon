{
  "description": "ChillMCP 평가용 테스트 케이스",
  "version": "1.0",
  "notes": "평가자들은 이 파일을 수정하여 커스텀 테스트 케이스를 추가할 수 있습니다",

  "command_line_parameters": {
    "description": "필수 1: 커맨드라인 파라미터 테스트",
    "test_cases": [
      {
        "id": "param_1_default",
        "name": "기본값",
        "boss_alertness": 50,
        "boss_alertness_cooldown": 300,
        "expected": "success",
        "description": "기본 설정으로 서버 시작"
      },
      {
        "id": "param_2_max_alertness",
        "name": "최대 경계, 짧은 쿨다운",
        "boss_alertness": 100,
        "boss_alertness_cooldown": 10,
        "expected": "success",
        "description": "항상 Boss Alert 상승, 빠른 감소"
      },
      {
        "id": "param_3_zero_alertness",
        "name": "경계 없음",
        "boss_alertness": 0,
        "boss_alertness_cooldown": 60,
        "expected": "success",
        "description": "Boss Alert 상승 없음"
      },
      {
        "id": "param_4_high_alertness",
        "name": "높은 경계",
        "boss_alertness": 80,
        "boss_alertness_cooldown": 60,
        "expected": "success",
        "description": "80% 확률로 Boss Alert 상승"
      },
      {
        "id": "param_5_edge_min",
        "name": "최소값 경계",
        "boss_alertness": 1,
        "boss_alertness_cooldown": 1,
        "expected": "success",
        "description": "극단값 테스트"
      },
      {
        "id": "param_6_edge_max",
        "name": "최대값 경계",
        "boss_alertness": 99,
        "boss_alertness_cooldown": 3600,
        "expected": "success",
        "description": "큰 cooldown 값"
      },
      {
        "id": "param_7_invalid_negative",
        "name": "음수 alertness",
        "boss_alertness": -1,
        "boss_alertness_cooldown": 300,
        "expected": "fail_or_default",
        "description": "범위 오류 처리"
      },
      {
        "id": "param_8_invalid_over_100",
        "name": "100 초과 alertness",
        "boss_alertness": 101,
        "boss_alertness_cooldown": 300,
        "expected": "fail_or_default",
        "description": "범위 오류 처리"
      },
      {
        "id": "param_9_no_parameters",
        "name": "파라미터 없음",
        "boss_alertness": null,
        "boss_alertness_cooldown": null,
        "expected": "success_with_defaults",
        "description": "기본값 사용 (50, 300)"
      }
    ]
  },

  "continuous_rest": {
    "description": "필수 2: 연속 휴식 테스트",
    "config": {
      "boss_alertness": 100,
      "cooldown": 300,
      "expected_min_increase": 1,
      "expected_max_increase": 3
    }
  },

  "stress_accumulation": {
    "description": "필수 3: 스트레스 누적 테스트",
    "config": {
      "wait_time_seconds": 70,
      "expected_increase": 1,
      "tolerance": 0,
      "boss_alertness": 0
    }
  },

  "delay_test": {
    "description": "필수 4: 지연 테스트",
    "config": {
      "boss_alert_level": 5,
      "expected_delay_seconds": 20,
      "tolerance_seconds": 1
    }
  },

  "parsing_test": {
    "description": "필수 5: 파싱 테스트",
    "required_fields": ["Break Summary", "Stress Level", "Boss Alert Level"],
    "regex_patterns": {
      "stress_level": "Stress Level:\\s*(\\d{1,3})",
      "boss_alert": "Boss Alert Level:\\s*([0-5])",
      "break_summary": "Break Summary:\\s*(.+?)(?:\\n|$)"
    },
    "valid_ranges": {
      "stress_level": [0, 100],
      "boss_alert": [0, 5]
    }
  },

  "cooldown_test": {
    "description": "필수 6: Cooldown 테스트",
    "config": {
      "boss_alertness": 100,
      "cooldown_seconds": 10,
      "wait_time_seconds": 15,
      "expected_decrease": 1,
      "tolerance": 0
    }
  },

  "optional_tests": {
    "chicken_beer": {
      "description": "선택적 1: 치맥 테스트",
      "required_emojis": ["🍗", "🍺"],
      "test_iterations": 3
    },
    "company_dinner": {
      "description": "선택적 3: 회식 테스트",
      "required_emojis": ["🎉"],
      "test_iterations": 5,
      "minimum_unique_events": 1
    }
  }
}
